<!DOCTYPE html>
<html>
  <head>
    <meta charset="{{ site.charset }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="{{ site.description }}" />
    <!--<script src="https://cdn.tailwindcss.com"></script> -->
    {{ function('wp_head') }}

  </head>
  <body class="{{body_class}}" x-data="{ show: true }" :class="{ 'overflow-hidden': show }">

    {% if fn('is_front_page') %}
        <div x-show="show" x-init="setTimeout(() => show = false, 100)">
          {% include 'partials/landing.twig' %}
        </div>
        {% else %}
        <div x-init="show = false"></div>
    {% endif %}

  <main id="realcontent" class="relative bg-custom-cream">
      {% include 'partials/header.twig' %}
    {% block body %}
    {% endblock body %}

    {% include 'partials/footer.twig' %}
  </main>
    


    {{ function('wp_footer') }}



  </body>
  <div class="custom-cursor"></div>
</html>
